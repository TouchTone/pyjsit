{
  "name": "JSIT Uploader Chrome Extension",
  "description": "Upload selected magnet:/torrents to justseed.it",
  "version": "0.1",
  "permissions": [
    "contextMenus",
    "http://*/",
    "https://*/",
    "storage"
    ],
  "manifest_version": 2,
  "icons": { "16": "logo_16.png",
             "48": "logo_48.png",
            "128": "logo_128.png" },  
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon" : "logo_48.png",
    "default_title" : "JSIT Uploader"
  },
  "background" : {
    "scripts" : [ "jsit_chrome_background.js" ],
    "persistent" : true
  },
  "content_scripts": [
  {
    "matches": [ "http://*/*", "https://*/*" ],
    "js" : [ "contentscript.js" ],
    "css": [ "contentstyle.css"]
  }
  ],
  "web_accessible_resources": [ "*.png" ]
}
